<h1>Listing fotos</h1>

<table>
  <tr>
    <th>Archivo</th>
    <th>Descripcion</th>
    <th>Categoryid</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fotos.each do |foto| %>
  <tr>
    <td><img src="<%= foto.attributes["foto"]["url"] %>" width="200" height="150" alt="edit" /></td>
    <td><%= foto.descripcion %></td>
    <td><%= foto.categoryId %></td>
    <td><%= link_to 'Show', foto %></td>
    <td><%= link_to 'Edit', edit_foto_path(foto) %></td>
    <td><%= link_to 'Destroy', foto, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

